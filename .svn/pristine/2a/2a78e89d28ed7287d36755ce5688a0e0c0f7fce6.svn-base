.pay-success{
  background: #F4F4F4;
  .pay-title{
    width: 16rem;
    height: 5.25rem;
    background: url("../img/paySuccessBg.png") center top no-repeat;
    background-size: 16rem 5.25rem;
  }
  .pay-info{
    padding: 0 5px;
    background: #fff;
    h1{
      padding: 15px 0 10px;
      font-size: rem(32);
      color: #252525;
      text-align: center;
    }
    .details{
      font-size: 15px;
      color: #484848;
      border-bottom: 2px solid #c9c9c9;
      span{
        line-height: 22px;
      }
      .consignee{
        span{
          font-size: rem(26);
          font-weight: bold;
        }
      }
      span.addre{
        color: #484848;
        font-size: rem(24);
      }
    }
    .btn-con{
      .pay-money{
        font-size: rem(24);
        color: #484848;
        padding: 20px 10px 27px;
        text-align: left;
        span{
          color: #FF5F0F;
          font-size: rem(32);
        }
      }
      .btns{
        padding: 0 0 20px 0;
        text-align: center;
        .btn-order{
          min-height: 40px;
          line-height: 35px;
          color: #FF5F0F;
          padding: 0 15px;
          border: 2px solid #ff5f05;
        }
        .order-detail{
          margin-right: 0.9rem;
        }
      }
    }
  }
  .important{
    padding: 12px 10px;
    background: #fff;
    h2{
      color: #FF5F0F;
      font-size: rem(26);
    }
    p{
      color: #484848;
      line-height: 23px;
      font-size: rem(26);
    }
  }
  //猜你喜欢 start
  .maylike{
    margin:0px auto;
    overflow:hidden;
    position:relative;
    padding: 0.8em 0em;
    span{
      float:left;
      text-align:center;
    }
    .border{
      border-bottom:1px solid #ddd;
      height:12px;
      width:40%;
    }
    .text{
      width:20%;
    }
  }
  .no-border{
    border:none;
  }
  .like-item{
    background:#F4F4F4;
    padding-top:0;
  }
  .pro-list{
    float:left;
    padding: 10px 3px;
    .list-con{
      background:white;
      width:7rem;
      border: 1px solid #dedede;
    }
    .pro-item{
      width: 100%;
      img{
        border:none;
        width: 100%;
        height: 7rem;
      }
    }
    .list-detail{
      padding-left: 4px;
      p.pro-name{
        color: #252525;
        font-size: 14px;
        margin: 0 0 3px;
      }
      .list-price{
        .dis-pri{
          color: #FF5F0F;
          font-size: 15px;
        }
        .fact-pri{
          color: #484848;
          font-size: 14px;
          text-decoration: line-through;
        }
      }
    }
  }
  //猜你喜欢 end
}
