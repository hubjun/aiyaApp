//设置
//个人信息
.headPortrait{
  line-height: 4.4rem;
}
.userImg{
  width: 4.6rem;
  height: 4.6rem;
}
.userImg img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
//email
.emailContent{
  background:#F3F3F3;
}
.emailDiv{
  margin-top: 16px;
}
.emailDiv .emailInput{
  width: 100%;
  padding-left: 10px;
  border-radius: 4px;
  padding-top: 22px;
  padding-bottom: 22px;
  border: 1px solid #C8C7CC;
}
//电话号码
.phoneTxt{
  color: #252525;
  margin-top: 16px;
  display: block;
  text-indent: 2px;
  font-size: 1rem;
}
//修改手机号码
.emailDiv .modifyPhone{
  border-color: transparent;
  background-color: #FF5F0F;
  color: #fff;
}
//修改密码
.modifyPwd{
  background-color: #F4F4F4;
}
