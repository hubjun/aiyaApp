.product-category{
  .ipt-search{
      border: 1px solid #BEBEBE;
      border-radius: 6px;
      padding-left: 12px;
      margin: 0 4% 0 10%;
      width: 65%;
  }
  .mian-category{
    padding: 0;
    .nav-menu{
      //width: 110px;
      height: 100%;
      position: absolute;
      top: 0;
      bottom: 0;
      overflow: hidden;
      .ul{
        display: block;
        //width: 110px;
        height: 100%;
        overflow-x: hidden;
        overflow-y: scroll;
        .li{
          width: 100%;
          height: 45px;
          font-size: 14px;
          line-height: 45px;
          text-overflow: ellipsis;
        }
        .category-select{
          color: #FF5F0F;
          padding: 0;
          background: #fff;
          border-left: 2px solid #FF5F0F;
        }
        .tab-onblur{
          color: #252525;
          padding: 0 2px;
          background-color: #efeff4;
          border-bottom: 1px solid #c8c8c8;
        }
        .button:after{
          position: inherit;
        }
      }
    }
    .right-detail{
        position: absolute;
        //top: 44px;
        right: 0;
        bottom: 0;
        //left: 110px;
        height: 100%;
        //padding: 20px 0;
        .pro-scroll{
          height: 100%;
          overflow-x: hidden;
          overflow-y: scroll;
          .slider-pager{
            bottom: 0;
          }
          .imgpro{
            .slider-slide{
              text-align: center;
              .col-list{
                width: 4.25rem;
                padding: 3px;
                img{
                   width: 4.25rem;
                   height: 4.25rem;
                 }
                .details{
                  padding: 9px 0 5px 0;
                  text-align: left;
                  line-height: 28px;
                  p.name{
                    margin: 0;
                    color: #555;
                    line-height: 19px;
                    font-size: 15px;
                  }
                  span.money{
                    color: #FF5F0F;
                    font-size: 15px;
                  }
                }
               }
            }
          }
        .sencond-category{
          padding: 10px 15px;
          h2{
            color: #252525;
            font-size: 16px;
            font-weight: 800;
          }
          span.products{
            display: block;
            color: #484848;
            line-height: 28px;
            font-size: 15px;
          }
        }
      }
      .pro-all{
        h3{
          font-size: rem(30);
          color: #252525;
          margin-left: 5px;
        }
        .row-all{
          margin: 0 rem(3);
          .pro-column {
            float: left;
            height: 171px;
            //padding: 10px 0;
            .imgbox{
              img {
                //width: 4.83rem;
                width: 100%;
                height: 4.83rem;
              }
            }
            .detail {
              p{
                margin: 0;
                font-size: rem(28);
              }
              p.name {
                color: #555;
                //line-height: rem(20);
              }
              p.price {
                color: #FF5F0F;
              }

            }
          }
        }
      }
    }
  }
}
