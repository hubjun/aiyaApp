/* 以下为地址列表 */
.address {
  .addr-background{
    background: #f3f5f5;
  }
  .addr-item-right {
    width: 62px;
    height: 84px;
    -webkit-box-align: center;
    position: absolute;
    right: 0;
    float: right;
    top: 50%;
    margin-top: -42px;
    text-align: center;
    border-left: 1px solid #ddd;
    z-index: 10;
  }
  .addr-item-right img {
    top: 50%;
    width: 25px;
    height: 25px;
    margin-top: -10px;
    position: relative;
  }

  .addr-itempr .item-content {
    padding-right: 80px !important;
  }

  .addr-detail-icon {
    color: #ccc;
    font-size: 16px;
    float: right;
    position: absolute;
    right: 4%;
    padding: 6px 0 6px 0;
  }

  .addr-detail-icon:before {
    content: "\f125";
    font-family: "Ionicons";
  }

  .addr-detail-left {
    float: left;
  }

  .item-block {
    display: block;
  }

  .item-input-padding-right {
    padding-right: 0 !important;
  }

  .item-input-max-width {
    max-width: 68%;
  }

  .star.addr-detail-left {
    margin-top: 4px;
  }

  .addr-default {
    background-color: #ff5f0f;
    color: #ffffff;
    padding: 3px 6px 3px 6px;
    margin: -15px 0 0 0;
    border-radius: 0 0 2px 2px;
    position: absolute;
    z-index: 5;
    font-size: 0.6rem !important;
  }

  .addr-check {
    position: absolute;
    top: 50%;
    height: 20px;
    margin: -15px -10px 0 0;
    z-index: 5;
  }


  .addr-content {
    padding-left: 56px;
    display: inline-block;
    width: 100%;
    padding-right: 0;
  }
  .addr-content .receiver {
    font-size: 0.7rem;
    color: #3e3e3e;
  }
  .addr-content .mobile {
    font-size: 0.7rem;
    color: #3e3e3e;
    margin-left: 20px;
  }
  .addr-content .number {
    font-size: 0.75rem;
    color: #3e3e3e;
  }
  .addr-content .address {
    font-size: 0.6rem;
    color: #666;
    word-wrap: break-word;
    overflow: hidden;
    word-break: break-all;
    white-space: normal;
  }
  .adressNull{
    p{
      text-align:center;
    }
    .addressNulltip1{
      color: #252525;
      font-size: 1.1rem;
      margin-top: 6rem;
    }
    .addressNulltip2{
      color: #7F7F7F;
      font-size: 0.86rem;
      margin-top: 17px;
    }
  }
}

