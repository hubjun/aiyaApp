//全局通用基本样式 共用布局样式

//隐藏原生滚动条
::-webkit-scrollbar {
    width: 0;
}

a{
  //color: #000;
  text-decoration: none;
}
.pad-0{
  padding: 0;
}
.pad-h-0{
  padding: 5px 0;
}
.mar-0{
  margin: 0;
}
.toothOp-enquiry{
  .input-error::-webkit-input-placeholder {
    color: #ff5f05 !important;
  }
}

html body {
  background: #f3f5f5;
  font-family: "Microsoft Yahei";
}

.border-none {
  border: none !important;
}

.border-top-none {
  border-top: none !important;
}

.border-bottom-none {
  border-bottom: none !important;
}
.margin-top {
  margin-top: 0.625rem !important;
}
.ion-hook{
  display: inline-block;
  background:url("../img/productInfo/hook.png") no-repeat;
  height:24px;
  width:24px;
  -webkit-background-size: contain;
  background-size: contain;
}
/*弹出popover统一样式*/
.aiya-popover{
  min-height: 50%;
  max-height:70%;
  top:inherit;
  bottom:0 !important;
}

.popup-buttons {
  padding: 10px 20px 15px;
  min-height: 35px;
  .button {
    height: 30px;
    min-height: 30px;
    margin-right: 15px;
    font-family: "Microsoft Yahei";
    .button-light {
      color: #999;
    }
  }
}
//默认背景颜色
//可在具体页面单独使用
//background: #F4F4F4;

//ion-list行间距
.gap{
  padding: 0.2rem;
}

//ion-form行间距
.form-gap{
  padding: 0.3rem;
  background: #F4F4F4;
}

//独占一行自适应input
.item-input-wrapper{
  input.aiyaku-input-bar{
    width: 100%;
    height: 32px;
    color: #808080;
    font-size: rem(24);
  }
}

//====页面顶部header====
.bar.bar-aiyaku{
  color: #fff;
  background-color: #FF5F0F;
  background-image: linear-gradient(0deg,#FF5F0F,#FF5F0F 50%,transparent 50%);
}
//=====app消息，颜色======
.badge-aiyaku{
  color: #000;
}
//===========flex grid start ============
//=======删格列=======
.col-73{
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 73%;
  -moz-box-flex: 0;
  -moz-flex: 0 0 73%;
  -ms-flex: 0 0 73%;
  flex: 0 0 73%;
  max-width: 73%;
}
.col-27{
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 27%;
  -moz-box-flex: 0;
  -moz-flex: 0 0 27%;
  -ms-flex: 0 0 27%;
  flex: 0 0 27%;
  max-width: 27%;
}
.col-71{
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 71%;
  -moz-box-flex: 0;
  -moz-flex: 0 0 71%;
  -ms-flex: 0 0 71%;
  flex: 0 0 71%;
  max-width: 71%;
}
.col-28{
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 28%;
  -moz-box-flex: 0;
  -moz-flex: 0 0 28%;
  -ms-flex: 0 0 28%;
  flex: 0 0 28%;
  max-width: 28%;
}
//=======列偏移量=======
.col-offset-1{
  margin-left: 1%;
}
.col-offset-6{
  margin-left: 6%;
}
//=============flex grid end ============

//=============边界、填充 start============
.mar-right-10{
  margin-right: 10px;
}


//=============边界、填充 end==============

//=======自定义按钮=======
//橘红色确定按钮
  .button-orange{
    border-color: transparent;
    background: #FF5F0F;
    color: #fff;
  }

//按钮左右边界距离
  .btn-mar-15{
    margin: 0 15px;
  }

//回到顶部
.scrollTop{
  width: 35px;
  height: 35px;
  position: fixed;
  bottom: 65px;
  right: 10px;
  opacity: 1;
  transition: all .3s ease 0s;
  -webkit-transition: all .3s ease 0s;
  z-index: 100;
  background: url("../img/scroll-to-top-icon.png");
  background-size: 35px 35px;

}

//QQ客服图标
.helpButton{
  width: 36px;
  height: 36px;
  position: fixed;
  bottom: 125px;
  right: 10px;
  padding: 4px;
  opacity: 1;
  z-index: 100;
 /* background: url("../img/scroll-to-top-icon.png");
  background-size: 35px 35px;*/
  border: 1px solid #CDCDCD;
  border-radius: 18px;
  text-align: center;
  background: white;
}
.aiyaLoading{}

//通用头部菜单
.nav-menu{
  top: 29px;
  width: 123px;
  height: auto;
  background: transparent;
  .nav-menu-nav{
    .list{
      li{
        i{
          color: #fff;
          font-size: 22px;
        }
        span{
          color: #fff;
          font-size: 16px;
          padding: 0 0 0 6px;
        }
      }
      li.item{
        background: rgba(0, 0, 0, 0.7);
      }
    }
  }
  .popover-arrow{
    &:after{
      background: rgba(0, 0, 0, 0.7);
    }
  }
}
