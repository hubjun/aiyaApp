.product-info{
  background-color:#F4F4F4;
  .button.icon-left.productLeft:before {
    float: none;
    padding-right: 0.2em;
    text-align: center;
  }
  .button.icon-right.productRight:before {
    float: none;
    padding-right: 0;
    padding-left: 0;
    text-align: center;
  }
  .has-header{
    top:0;
  }
  .product-header{
    filter:alpha(opacity=0);
    -moz-opacity:0;
    opacity:0;
    .ion-purchase{
      position: absolute;
      right: 38px;
    }
  }
  .header-button{
    z-index:10;
    position: absolute;
    background: #7e7e7e;
    border-radius: 10%;
    text-align: center;
    filter:alpha(opacity=80);
    -moz-opacity:0.8;
    opacity:0.8;
    top:2px;
    width: 39px;
    height:39px;
    .button{
      min-height: 39px;
      min-width:39px;
      color:white;
    }
    .has-badge {
      .badge-aiyaku {
        width: 20px;
        height: 18px;
        position: absolute;
        top: 0;
        right: -3px;
        color: #fff;
        font-size: 10px;
        line-height: 12px;
        padding: 2px 3px 3px;
        background: #920019;
      }
    }
  }
  .header-back{
    left:8px;
  }
  .header-order{
    right:70px;
  }
  .header-more{
    right:8px;
  }
  .product-slide{
    ion-slide{
      text-align: center;
      width: 100%;
      img{
        height: 16rem;
        width: 16rem;
      }
    }
    .slider-pager{
      bottom: rem(18);
      .slider-pager-page{
        font-size: 8px;
      }
    }
  }
  .no-border{
    border:none;
  }
  .basic-info{
    border:none;
    .name{
      overflow: visible;
      white-space: normal;
      color:#252525;
    }
    .price{
      color:#ff5f05;
      font-size:20px;
    }
    .tag{
      margin-left:4px;
      padding:2px;
      background: #ff5f05;
      font-size:12px;
      color:white;
      vertical-align: top;
    }
    .cost{
      text-decoration:line-through;
      color:#808080;
    }
    .evaluate{
      color:#484848;
    }
    .stock{
      color: #484848;
     /* margin-left:30px;*/
    }
  }
  .promotion{
    padding-top:0px;
    color: #808080;
    span{
      padding-right: 20px;
      margin-top: 4px;
      display: block;
      float: left;
      i{
        padding-right:5px;
      }
    }

  }
  .sale{
    vertical-align: middle;
    font-size:20px;
    color:#808080;
    border-bottom:none;
    span{
      vertical-align: top;




    }
    .activeTxt{
      white-space: normal;
    }
  }
  .icon-like{
    color:#ff5f05;
  }
  .icon-boring{
    color:#808080;
  }
  .ion-hasCollect{
    color:#ff5f05;
  }
  .gap{
    padding:0.5em;
  }
  .product-detail{
    white-space: normal;
    img{
      width:100%;
      display:block;
    }
  }
  .product-footer{
    padding:0;
    .row{
      padding:0;
      .button-QQ{
        text-align: center;
        padding-top: 3px;
      }
      .QQ{
        width: 2em;
        height:2em;
        background: url("../img/productInfo/QQ.png") no-repeat;
        background-size:contain;
        display: inline-block;
      }
      .QQTxt{
        margin-top: -6px;
        color: #808080;
      }
      .button-bar>.button, .bar .buttons>.button {
        line-height: 44px;
      }
      .button-bar>.button:first-child {
        border-radius:0;
      }
      .button-bar>.button:last-child {
        border-radius: 0;
      }
      .button-bar{
        padding: 0;
        .button-buyNow{
          line-height:50px;
          border-color: transparent;
          background-color: #e42112;
          color: #fff;
        }
        .button-join{
          line-height:50px;
          border-color: transparent;
          background-color: #ff5f0f;
          color: #fff;
        }
        .button-noBuy{
          background:#7e7e7e;
          color:#FFFFFF;
        }
      }
    }
  }
  .like-item{
    background:#F4F4F4;
    padding-top:0;
  }
  .like-item-bottom{
    padding-bottom:60px;
  }
  .pro-list{
    float:left;
    padding: 10px 3px;
    .list-con{
      background:white;
      width:7rem;
      border: 1px solid #dedede;
    }
    .pro-item{
      width: 100%;
      img{
        border:none;
        width: 100%;
        height: 7rem;
      }
    }
    .list-detail{
      padding-left: 4px;
      p.pro-name{
        color: #252525;
        font-size: 14px;
        margin: 0 0 3px;
        height: 34px;
        line-height: 16px;
        white-space: normal;
      }
      .list-price{
        .dis-pri{
          color: #FF5F0F;
          font-size: 15px;
        }
        .fact-pri{
          color: #484848;
          font-size: 14px;
          text-decoration: line-through;
        }
      }
    }
  }
  .maylike{
    margin:0px auto;
    overflow:hidden;
    position:relative;
    padding: 0.8em 0em;

    span{
      float:left;
      text-align:center;
    }

    .border{
      border-bottom:1px solid #ddd;
      height:12px;
      width:40%;
    }
    .text{
      width:20%;
    }
  }
}
.popup-buttons .button{
  font-size: 0.6rem;
}
