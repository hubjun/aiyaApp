.tooth-op{
  background: #F4F4F4;
  .slider-pager{
    bottom: 9px;
    .slider-pager-page.active{
      -webkit-transition: color .4s ease-in;
      transition:opacity .4s ease-in;
      color: #ff7f02;
    }
  }
  .slider{
    img{
      width: 100%;
      height: 6.5rem;
    }
  }
  .toogle-bar{
    width: 100%;
    height: 40px;
    margin: 10px 0 0;
    padding: 0 10px;
    background: #fff;
    span{
      float: left;
      padding: 0 0 0 15px;
      color: #FF5F0F;
      font-size: 18px;
      line-height: 40px;
    }
    .toogle-icon{
      float: right;
      width: 70px;
      margin: 10px 0;
      border-left: 1px solid #dfdfdf;
      text-align: center;
      i{
        color: #6D6D6D;
        font-size: 23px;
      }
    }
  }
  //商品网格、列表显示 start
  .pro{
    width:100%;
    overflow:hidden;
    a,span{
      display:block;
      text-decoration:none;
      color: #252525;
    }
    .pro-warp{
      background-color:#f3f5f7;
      width:100%;
      height:105px;
      border-top:1px solid #dfdfdf;
      border-bottom:1px solid #dfdfdf;
    }
    .pro-body{
      width:100%;
      overflow:hidden;
    }
    .pro-body-des{
      display:inline-block;
      position:absolute;
      left:8px;
      right:0;
      img{
        width:79px;
        height:79px;
        border:1px solid #dfdfdf;
        margin:10px 0 0 10px;
      }
      .pro-body-des-text{
        position:absolute;
        padding: 3px 0;
        font-size:12px;
        left:101px;
        right:10px;
        top:10px;
        bottom:10px;
        .pro-name{
          font-size: 14px;
        }
        .fact-price{
          color: #808080;
          margin: 9px 0 0 0;
          font-size: 14px;
          text-decoration: line-through;
        }
        .dis-price{
          position: absolute;
          top: 50px;
          color: #FF5F0F;
          font-size: 15px;
          //margin: 20px 0 0 0;
          line-height: 26px;
        }
        .pro-body-des-con{
          margin-top:5px;
        }
      }
    }
  }
  .column-list{
    padding: 5px;
    .pro-row{
      float: left;
      //height: 236px;
      padding: 10px 3px;
      .list-con{
        border: 1px solid #dedede;
        background: #fff;
        .pro-item{
          width: 100%;
          height: 7.45rem;
          img{
            width: 100%;
            height: 7.45rem;
          }
        }
        .list-detail{
          padding: 7px 3px 3px;
          p.pro-name{
            height: 2rem;
            color: #252525;
            font-size: 14px;
            margin: 0 0 3px;
          }
          .kind-price{
            position: relative;
            //padding: 10px 0 0 0;
            .fact-price{
              /*display: block;*/
              color: #808080;
              font-size: 14px;
              text-decoration: line-through;
            }
            .dis-price{
              line-height: 26px;
              color: #FF5F0F;
              font-size: 15px;
            }
            //.join-cart{
            //  position: absolute;
            //  width: 0.85rem;
            //  height: 0.85rem;
            //  top: 29px;
            //  right: 16px;
            //  cursor: pointer;
            //  background: url("../img/joinCart.jpg") no-repeat;
            //  background-size: 0.85rem 0.85rem;
            //}
          }
          .detail-enquiry{
            line-height: 26px;
            color: $positive;
            font-size: 15px;
          }
        }
      }
    }
  }
  //商品网格、列表显示 end
  .noMore{
    font-size: rem(20);
    margin: 5px 0;
    text-align: center;
  }
  .bar-footer {
    height: 50px;
    border: none;
    padding: 0;
  }
}
