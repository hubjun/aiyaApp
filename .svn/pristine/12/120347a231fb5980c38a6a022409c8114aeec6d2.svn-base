.orderDetail{
  background: #F4F4F4;

  //ionic list
  .list {
    margin-bottom: 0;
  }

  //商品列表
  .purchaseProductItem {
    .productImg {
      @include flex(0, 0, $productItemImg-width * 0.8);
    }
    .productDesc {
      .productDesc-spec {
        font-size: 70%;
      }
      .productDesc-price {
        color: $global-gray;
      }
    }
    .productNum {
      @include align-self(flex-start);
      color: $striking;
    }
  }

  .pay-status{
    width: 100%;
    height: 4.2rem;
    display: inline-table;
    //height: 38px;
    position: relative;
    border: 1px solid #d8d8d8;
    border-left: 0;
    border-right: 0;
    background: #ff781e;
    .left-con{
      //padding: 15px 15px 10px;
      padding: 0.75rem 15px 10px;
      color: #fff;
      h2{
        color: #fff;
        margin-bottom: 3px;
        line-height: inherit;
        font-size: rem(30);
        font-weight: 800;
      }
      p{
        font-size: rem(20);
        line-height: 23px;
        margin: 0;
      }
    }
    i{
      width: 4.8rem;
      height: 3rem;
      position: absolute;
      top: 10px;
      right: 60px;
    }
    .payment{
      background: url("../img/waitPay.png") no-repeat;
      background-size: 4.8rem 3rem;
    }
    .delivered{
      background: url("../img/delivered.png") no-repeat;
      background-size: 4.8rem 3rem;
    }
  }
  .status-delivered{
    .delivered-mar{
      padding-left: 57px;
    }
    i.payment-delivered{
      color: #00ae65;
      font-size: 30px;
    }
    p{
      color: #00ae65;
      font-size: rem(26);
      white-space: normal;
    }
    span{
      color: #808080;
      font-size: rem(20);
    }
  }
  .wait-contact{
    font-size: rem(24);
    color: #484848;
    background: #fff;
    span{
      line-height: 22px;
    }
    .consignee{
      span{
        font-size: rem(26);
        font-weight: bold;
      }
    }
    .address{
      span{
        font-size: rem(26);
      }
    }
  }
  .waitPay-list{
    position: relative;
    //padding: 13px 12px;
    background: #fff;
    .left-img{
      //display: inline-block;
      float: left;
      img{
        width: 79px;
        height: 79px;
      }
    }
    .mid-detail{
      //display: inline-block;
      float: left;
      padding: 0 0 0 16px;
      font-size: 16px;
      white-space: normal;
      span{
        display: block;
        line-height: 23px;
        font-size: rem(24);
      }
      .name{
        color: #252525;
      }
      .parames{
        color: #808080;
        font-size: rem(20);
      }
      .price{
        color: #FF5F0F;
      }
    }
    .count{
      position: absolute;
      top: 6px;
      right: 0;
      font-size: 16px;
      color: #252525;
    }
  }
  .moreOrders{
    text-align: center;
    ul{
      li{
        background: #f6f5f5;
        padding: 10px;
        border: 0;
        font-size: 13px;
      }
    }
  }
  .payment-list{
    padding-top: 10px;
    padding-bottom: 10px;
    .pay{
      h2{
        float: left;
        color: #252525;
        font-size: rem(24);
      }
      span{
        float: right;
        color: #FF5F0F;
        font-size: rem(30);
      }
    }
  }
  .payment-info{
    .li{
      color: #808080;
      font-size: rem(24);
    }
  }
  .invoice{
    h2{
      padding: 0 0 10px 0;
      color: #252525;
      font-size: rem(30);
      font-weight: 800;
    }
    .li{
      color: #808080;
      font-size: rem(24);
    }
  }
}
//商品列表与其他内容的间距
.igap{
  padding: 10px;
}
//底部菜单
.orderDetail-footer{
  padding:0;
  background:#ffffff;
  border-top: 1px solid #ccc;
  .row{
    padding:0;
    .button-QQ{
      text-align: center;
      padding-top: 3px;
    }
    .QQ{
      width: 2em;
      height:2em;
      background: url("../img/productInfo/QQ.png") no-repeat;
      background-size:contain;
      display: inline-block;
    }
    .QQTxt{
      margin-top: -6px;
      color: #808080;
    }

    .button-bar{
      padding: 0;
      .button-buyNow{
        line-height:50px;
        border-color: transparent;
        background-color: #e42112;
        color: #fff;
      }
      .button{
        background:#ffffff;
        min-height: 0;
        min-width: 0;
        line-height: 2.5;
        padding: 0 .375rem;
        margin: 0 .125rem;
        color: #222;
        background-color: #fff;
        border: 1px solid #ccc;
        text-align: center;
        font-size: 14px;
        height:36px;
        margin-top:7px;
        border-radius: 4px;
      }
      .button-join{
        line-height:50px;
        border-color: transparent;
        background-color: #ff5f0f;
        color: #fff;
      }
      .button-noBuy{
        background:#7e7e7e;
        color:#FFFFFF;
      }
    }
  }
}
